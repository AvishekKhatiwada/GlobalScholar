@{
    ViewData["Title"] = "Countries| GlobalScholar";
    Layout = "_Mylayout";
}
@model GlobalScholar.Models.Country
<div class="main-container">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Update Country Name
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Country" asp-action="Edit" class="w-50">
                        <div class="form-group">
                            <input type="hidden" value="@Model.Id" class="form-control w-25" name="id" id="id"/>
                            <label for="Name">Country Name</label>
                            <input id="Name" name="Name" value="@Model.Name" type="text" class="form-control" required />
                        </div>
                        <div class="form-group mt-1">
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>